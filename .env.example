# Server Configuration
PORT=3000
NODE_ENV=development

# Keycloak Configuration
KEYCLOAK_REALM_URL=http://localhost:8080/realms/your-realm
KEYCLOAK_CLIENT_ID=backend-bridge
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_JWKS_URI=http://localhost:8080/realms/your-realm/protocol/openid_connect/certs

# Hyperledger Fabric CA Configuration
FABRIC_CA_URL=https://localhost:7054
FABRIC_CA_NAME=ca-org1
FABRIC_CA_ADMIN_USER=admin
FABRIC_CA_ADMIN_PASSWORD=adminpw
FABRIC_CA_TLS_CERT_PATH=./crypto-config/peerOrganizations/org1.example.com/ca/ca.org1.example.com-cert.pem

# Fabric Network Configuration
FABRIC_NETWORK_CONFIG_PATH=./crypto-config/connection-org1.json
FABRIC_WALLET_PATH=./wallet
FABRIC_CHANNEL_NAME=mychannel
FABRIC_CHAINCODE_NAME=basic
FABRIC_MSP_ID=Org1MSP

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key
ENCRYPTION_KEY=your-32-char-encryption-key-here
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/backend-bridge.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (if needed for additional data storage)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=backend_bridge
# DB_USER=bridge_user
# DB_PASSWORD=bridge_password
