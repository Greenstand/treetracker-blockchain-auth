# Server Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=/api/v1

# Keycloak Configuration (Mock for development)
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=treetracker
KEYCLOAK_CLIENT_ID=treetracker-auth
KEYCLOAK_CLIENT_SECRET=mock-client-secret
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Hyperledger Fabric Configuration (Mock for development)
FABRIC_NETWORK_NAME=treetracker-network
FABRIC_CHANNEL_NAME=treetracker-channel
FABRIC_CHAINCODE_NAME=treetracker
FABRIC_MSP_ID=GreenstandMSP
FABRIC_PEER_ENDPOINT=localhost:7051
FABRIC_ORDERER_ENDPOINT=localhost:7050
FABRIC_CA_URL=http://localhost:7054
FABRIC_CA_NAME=ca-greenstand
FABRIC_ADMIN_USER=admin
FABRIC_ADMIN_PASSWORD=adminpw

# Fabric TLS Configuration
FABRIC_TLS_ENABLED=false

# Wallet Configuration
WALLET_PATH=./wallet
WALLET_TYPE=FileSystemWallet

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-for-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=false